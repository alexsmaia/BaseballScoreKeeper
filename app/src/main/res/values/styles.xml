<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryDark">#D32F2F</item>
        <item name="colorAccent">#FF5252</item>
        <!-- ButtonStyle -->
        <item name="buttonStyle">@style/Buttons</item>
    </style>
    <!-- Ball Styles. -->
    <style name="ball">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/ball</item>
    </style>
    <!-- Winner Img Style -->
    <style name="winner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/winner</item>
    </style>
    <!-- Columns Styles. -->
    <style name="Columns">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="ColumnsSecBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- Secondary counters views Styles. -->
    <style name="LinearCounterBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="RelativeCounterBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">#BDBDBD</item>
        <item name="android:padding">6dp</item>
    </style>
    <!-- Text Styles -->
    <style name="Base18Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Innings" parent="Base18Wrap">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="TeamName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#F44336</item>
    </style>
    <style name="Points">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="SecundaryScoreLabel" parent="Base18Wrap">
        <item name="android:paddingRight">6dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="SecundaryScoreCount" parent="Base18Wrap">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#F44336</item>
    </style>
    <!-- Button Styles -->
    <style name="Buttons" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#F44336</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
